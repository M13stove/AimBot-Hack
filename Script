local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

-- Create Main GUI Window
local Window = OrionLib:MakeWindow({
    Name = "Hide & Seek Extreme Helper",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "OrionTest"
})

-- ESP & Hacks Tab
local HacksTab = Window:MakeTab({
    Name = "ESP & Hacks",
    Icon = nil,
    PremiumOnly = false
})

local HacksSection = HacksTab:AddSection({
    Name = "Player Features"
})

-- Enable ESP
HacksTab:AddButton({
    Name = "Enable ESP",
    Callback = function()
        for _, player in pairs(game.Players:GetPlayers()) do
            if player ~= game.Players.LocalPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                local espBox = Instance.new("BoxHandleAdornment")
                espBox.Adornee = player.Character.HumanoidRootPart
                espBox.Size = Vector3.new(4, 6, 4)
                espBox.Color3 = Color3.new(1, 0, 0)
                espBox.AlwaysOnTop = true
                espBox.ZIndex = 10
                espBox.Parent = game.Workspace
            end
        end
        print("ESP Enabled")
        OrionLib:MakeNotification({
            Name = "ESP Enabled",
            Content = "You can now see all players!",
            Image = nil,
            Time = 3
        })
    end
})
